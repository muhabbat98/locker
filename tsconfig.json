{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // ðŸ‘ˆ This is the important part!
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
    // other config...
  },
  "include": ["src"]
}
